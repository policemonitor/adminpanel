<div class="container-fluid">
  <div class="row">
    <div class="col-md-8 col-md-offset-2">
      <div class="panel panel-default">
        <div class="panel-body">
          <table id="administrator">
            <thead>
              <tr>
                <th data-field="lastname">Прізвище Ім'я По батькові</th>
                <th data-field="login">Посада</th>
                <th data-field="personal_number">Особистий номер</th>
                <th data-field="login">Логін у системі</th>
                <th data-field="view"></th>
                <th data-field="delete"></th>
              </tr>
            </thead>

            <tbody>
              <% @administrators.each do |administrator| %>
              <tr>
                <td><%= administrator.lastname %></td>
                <td><%= rank_to_word(administrator) %></td>
                <td><%= administrator.personal_number %></td>
                <td><%= administrator.login %></td>
                <td><%= link_to "Переглянути", administrator, data: {'no-turbolink': true } %></td>
                <td><%= link_to "Редагувати", edit_administrator_path(administrator), data: { "no-turbolink": true } %></td>
              </tr>
              <% end %>
            <tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>
