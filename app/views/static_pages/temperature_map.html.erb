
<div id="floating-panel">
  <div class="btn-group" role="group" aria-label="...">
      <button class="btn btn-default" onclick="toggleHeatmap()">Приховати мапу</button>
      <button class="btn btn-default" onclick="changeGradient()">Змінити колір</button>
      <button class="btn btn-default" onclick="changeRadius()">Змінити радіус</button>
      <button class="btn btn-default" onclick="changeOpacity()">Змінити прозорість</button>
  </div>
  <input type="text" class="dp" data-provide='datepicker' id="start_datepicker" placeholder="Початкова дата" style="height:31px;width:120px;" >
  <input type="text" class="dp" data-provide='datepicker' id="end_datepicker"   placeholder="Кінцева дата"   style="height:31px;width:120px;" >

  <button class="btn btn-default" onclick="getPeriod()">Пошук</button>
</div>

<div class="container-fluid">
  <div id="map-container">
    <div id="map-canvas"></div>
  </div>
</div>

