<div class="container-fluid">
  <%= render "shared/js/geocode" %>
  <%= render "shared/modals/law_modal" %>
  <div class="row">
    <div class="col-md-4 col-md-offset-4">
      <h1>Заява про правопорушення</h1>
      <h4>Ваші дані будуть оброблені згідно із
        <%= link_to "законодавством України.", "#", data: { toggle: "modal", target: "#law_preview"} %></h4>
      <%= form_for @claim do |f| %>
      <div class="form-group vertical-space">
        <%= f.label :lastname, "Ваше Прізвище Ім’я По батькові", class: "control-label pull-left" %>
        <%= f.text_field :lastname, placeholder: "Шатов Тарас Генадійович",
                                class: "form-control",
                                required: true %>
      </div>

      <div class="form-group">
        <%= f.label :phone, "Ваш номер телефону", class: "control-label pull-left" %>
        <%= f.text_field :phone, placeholder: "+ 38(044)3344553",
                                class: "form-control",
                                pattern: "[+][0-9]{1,2}[(][0-9]{2,6}[)][0-9]{3,10}",
                                required: true %>
      </div>

      <div class="form-group">
        <%= f.label :theme, "Тема звернення", class: "control-label pull-left" %>
        <%= f.text_field :theme, placeholder: "Крадіжка, бійка, напад...",
                                class: "form-control",
                                required: true %>
      </div>


      <div class="form-group">
        <label class="control-label pull-left" for="address_input">Місце злочину</label>
        <input placeholder="Адреса місця злочину" class="form-control" id="address_input" type="text" onchange="geocodeAddress()" disabled required>
        <div class="checkbox">
          <input type="checkbox" id="checkbox_coordinates" name="checkbox_coordinates" onclick="autoCoordinatesCheck()" checked >
          <label for="checkbox_coordinates">Визначити моє місцеположення автоматично.</label>
        </div>

        <%= f.text_field :latitude, id: "latitude_field", type: "hidden" %>
        <%= f.text_field :longitude, id: "longitude_field", type: "hidden" %>
      </div>

      <div class="form-group">
        <%= f.label :text, "Текст повідомлення", class: "control-label pull-left" %>
        <%= f.text_area :text, placeholder: "Що у вас сталося?",
                                class: "form-control text-area",
                                required: true %>
      </div>

      <div class="form-group">
        <%= f.submit "Відправити заяву", class: "btn-submit", data: {toggle: "popover"} %>
      </div>
      <% end %>
    </div>
  </div>
</div>
