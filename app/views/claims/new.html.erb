<div class="container-fluid">
  <%= render "shared/coordinates" %>
  <%= render "shared/modal" %>
  <div class="row">
    <div class="col-md-4 col-md-offset-4">
      <h1>Заява про правопорушення</h1>
      <h4>Ваші дані будуть оброблені згідно з
        <%= link_to "законами України.", "#", data: { toggle: "modal", target: "#law_preview"} %></h4>
      <%= form_for @claim do |f| %>
      <div class="form-group vertical-space">
        <%= f.label :lastname, "Ваше Прізвище Ім’я По батькові", class: "control-label pull-left" %>
        <%= f.text_field :lastname, placeholder: "Шатов Тарас Генадійович",
                                class: "form-control",
                                required: true %>
      </div>

      <div class="form-group">
        <%= f.label :phone, "Ваш номер телефону", class: "control-label pull-left" %>
        <%= f.text_field :phone, placeholder: "+ 38(044)3344553",
                                class: "form-control",
                                pattern: "[+][0-9]{1,2}[(][0-9]{2,6}[)][0-9]{3,10}",
                                required: true %>
      </div>

      <div class="form-group">
        <%= f.label :theme, "Тема звернення", class: "control-label pull-left" %>
        <%= f.text_field :theme, placeholder: "Крадіжка, бійка, напад...",
                                class: "form-control",
                                required: true %>
      </div>

      <div class="form-group">
        <div class="input-group">
          <%= f.label :latitude, "Місце злочину", class: "control-label pull-left" %>
          <%= f.text_field :latitude, placeholder: "Coordinates...",
                                  class: "form-control",
                                  id: "coordinates",
                                  required: true %>
          <span class="input-group-btn">
            <button class="btn btn-default input-button" type="button" onclick="getCoordinates()" >Оновити</button>
          </span>
        </div>
      </div>


      <div class="form-group">
        <%= f.label :text, "Текст повідомлення", class: "control-label pull-left" %>
        <%= f.text_area :text, placeholder: "Що у вас сталося?",
                                class: "form-control text-area",
                                required: true %>
      </div>

      <div class="form-group">
        <%= f.submit "Відправити заяву", class: "btn-submit" %>
      </div>
      <% end %>
    </div>
  </div>
</div>
