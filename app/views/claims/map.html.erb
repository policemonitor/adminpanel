<%= javascript_include_tag "https://maps.google.com/maps/api/js?libraries=geometry&key=#{APP_CONFIG['google-map-key']}" %>

<div class="container-fluid">
  <div id="map-container">
    <div id="map-canvas"></div>
  </div>
</div>

<script>
  handler = Gmaps.build('Google');
  handler.buildMap({
    provider: {
      zoom: 10
    },
    internal: {
      id: 'map-canvas'
    }
  }, function () {
    markers = handler.addMarkers(<%=raw @hash.to_json.html_safe %>);
    handler.map.centerOn(
        new google.maps.LatLng(<%= raw @default_location[:latitude] %>,
                               <%= raw @default_location[:longitude] %> )
                        );
  });
</script>
