<script src="//maps.google.com/maps/api/js?v=3.13&sensor=false&libraries=geometry" type="text/javascript"></script>
<script src="//google-maps-utility-library-v3.googlecode.com/svn/tags/markerclustererplus/2.0.14/src/markerclusterer_packed.js" type="text/javascript"></script>


<div class="container-fluid">
  <div class="row">
    <div class="col-md-10">
      <div id="map-container">
        <div id="map-canvas"></div>
      </div>
    </div>
    <div class="col-md-2">
      <div class="fixed-list">
        <%= form_for @claim do |f| %>
        <div class="row">
          <%= f.collection_check_boxes :crew_ids, Crew.all, :id, :crew_name do |field| %>
          <div class="col-md-12">
            <div class="card-element">
              <%= field.check_box %> Екіпаж <%= field.label %>
            </div>
          </div>
          <% end %>
          <div class="col-md-12">
            <%= f.submit "Надати наказ", class: "btn btn-danger  btn-block", id: "send-crew-button" %>
          </div>
        </div>
        <% end %>
      </div>
    </div>
  </div>
</div>



<% @claim = Claim.find(params[:id]) %>
<% @hash = Gmaps4rails.build_markers(@claim) do |claim, marker|
  marker.lat claim.latitude
  marker.lng claim.longitude
  marker.title claim.theme
  marker.infowindow claim_card(claim)
end
%>
<script type="text/javascript">
  handler = Gmaps.build('Google');
  handler.buildMap({
    provider: {},
    internal: {
      id: 'map-canvas'
    }
  }, function () {
    markers = handler.addMarkers(<%=raw @hash.to_json %>);
    handler.bounds.extendWith(markers);
    handler.fitMapToBounds();
  });
</script>
